html
  head
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='Cpaste')
    meta(name='keywords', content='copy paste helper, online clipboard')
    meta(name='language', content='English')
    meta(name='copyright', content='Sezgin Ege (c) 2017')
    meta(name='robots', content='index, follow')
    title Cpaste: Online Clipboard
    link(href='libs/font-awesome/css/font-awesome.min.css', rel='stylesheet')
    link(rel='stylesheet', href='libs/bootstrap/css/bootstrap.min.css')
    style.
      .plugins {
      font-size: 32px;
      }
      .plugins a{
      margin: 5px;
      }
      .create-btn-container {
      text-align: center;
      }
      .share-buttons {
      font-size: 24px;
      }
      .share-buttons a {
      margin: 5px;
      }
      textarea{
        resize: none;
      }
      #copy{
      position:absolute;
      top:10px;
      right:30px;
      }
  body
    nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          a.navbar-brand(href='/') Cpaste
    .container-fluid
      .row
        .col-md-3
          .panel.panel-default
            .panel-body
              p The purpose of this tool is to simplify copying text between devices for free.
              p You can install plug-ins to take full advantage of the features of this tool. 
              .plugins
                a(href='/', target='_blank')
                  i.fa.fa-chrome(aria-hidden='true')
                a(href='/', target='_blank')
                  i.fa.fa-firefox(aria-hidden='true')
        .col-md-6
          if(!exist)
            textarea#data.form-control(rows='24')
            br                
            .create-btn-container
              button.btn.btn-primary(style='width: 200px;', onclick='create()') Create
          else
            textarea#data.form-control(rows='24') #{data}
            button#copy.btn.btn-default(onclick='copy()') Copy 
              i.fa.fa-clone
        .col-md-3
          if(exist)
            .panel.panel-default
              .panel-body
                h4 Link: cpaste.me/#{code}
                  b
                .share-buttons
                  // Email
                  a(href='mailto:?Subject=Cpaste&Body=http://cpaste.me/#{code}' onclick="ga('send', 'event', { eventCategory: 'Social', eventAction: 'Share', eventLabel: 'Mail'})")
                    i.fa.fa-envelope-o
                  // Facebook
                  a(href='http://www.facebook.com/sharer.php?u=http://cpaste.me/#{code}', target='_blank', onclick="ga('send', 'event', { eventCategory: 'Social', eventAction: 'Share', eventLabel: 'Facebook'})")
                    i.fa.fa-facebook
                  // Google+
                  a(href='https://plus.google.com/share?url=http://cpaste.me/#{code}', target='_blank', onclick="ga('send', 'event', { eventCategory: 'Social', eventAction: 'Share', eventLabel: 'Google+'})")
                    i.fa.fa-google
